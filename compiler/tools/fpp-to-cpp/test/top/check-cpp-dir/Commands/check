#!/bin/sh -e

fpp_to_cpp=../../../../../../bin/fpp-to-cpp
fprime_gcc=../../../../../../scripts/fprime-gcc

echo '  removing old files'
./clean

dir=`cd ../..; echo $PWD`
fprime_dir=../../../fprime

echo '  generating C++'
$fpp_to_cpp -p $dir -i $fprime_dir/config/FpConfig.fpp,$fprime_dir/Platform/PlatformTypes.fpp,$fprime_dir/Fw/Prm/Prm.fpp,../../phases.fpp \
  $fprime_dir/Fw/Cmd/Cmd.fpp ../../commands.fpp
for suffix in hpp cpp
do
  cp ../../CommandsTopologyAc.ref.$suffix CommandsTopologyAc.$suffix
done

flags="-I.. -I../../../fprime -I../../../fprime/config -Wno-unused-parameter -c"
echo '  compiling C++'
for variable_flags in '' '-DFW_DIRECT_PORT_CALLS'
do
  echo "    variable_flags=$variable_flags"
  $fprime_gcc $variable_flags $flags CommandsTopologyAc.cpp
done
